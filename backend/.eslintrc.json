{
    "env": {
      "node": true,          // Enable Node.js global variables like `process`
      "es2021": true         // Enable modern JavaScript features
    },
    "extends": [
      "eslint:recommended"   // Use recommended ESLint rules
    ],
    "parserOptions": {
      "ecmaVersion": 12,     // Use ECMAScript 2021 syntax
      "sourceType": "module" // Allow ES Modules if needed
    },
    "rules": {
      "no-unused-vars": "warn",   // Example: Warn instead of error for unused variables
      "no-undef": "error"         // Ensure undefined variables are caught
    }
  }
  